{
  "name": "chat-service",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "main": "dist/apps/chat-service/main.js",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@chromaspace/shared": "*"
  },
  "nx": {
    "tags": ["type:app"],
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "dependsOn": ["@chromaspace/shared:build"],
        "options": {
          "main": "apps/chat-service/main.ts",
          "tsConfig": "apps/chat-service/tsconfig.json",
          "outputPath": "dist/apps/chat-service",
          "rootDir": "apps/chat-service/src",
          "assets": ["apps/chat-service/package.json"],
          "inspect": false
        },
        "outputs": ["{options.outputPath}"]
      },
      "serve": {
        "executor": "@nx/js:node",
        "options": {
          "buildTarget": "chat-service:build",
          "watch": true,
          "inspect": false
        },
        "dependsOn": ["@chromaspace/shared:build"]
      }
    }
  }
}
